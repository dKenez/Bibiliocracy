      <div class="card">
      	<article class="card-group-item">
      		<header class="card-header d-flex justify-content-center" style="background-color: #68A891;">
      			<h6 class="title text-light">Rólad</h6>
      		</header>
        </article> <!-- card-group-item.// -->

        <article class="card-group-item">
          <div class="col-md-12">
            <h6>Mottó: <%= bibliocrat.motto %></h6>
          </div>
          <div class="col-md-12">
            <div class="dropdown-divider"></div>
            <h6>Életkor: <%= bibliocrat.age %></h6>
          </div>
          <div class="col-md-12">
            <div class="dropdown-divider"></div>
            <h6>Nem: <%= bibliocrat.gender %></h6>
          </div>
        </article> <!-- card-group-item.// -->
        <article class="card-group-item">
          <footer class="card-footer d-flex justify-content-center" style="background-color: #68A891;">
