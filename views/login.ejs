<%- include('header') -%>
<%- include('navbar') -%>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Lépj be</h1>
</div>

<form class="container" method="POST">
  <div class="row">
    <aside class="col-8" style="margin: auto;">
      <div class="card">
      	<article class="card-group-item">
      		<header class="card-header d-flex justify-content-center" style="background-color: #68A891;">
        </article> <!-- card-group-item.// -->

        <article class="card-group-item col-12">
          <input type="hidden" id="loginType" name="loginType" value='login'/>
          <div class="form-group">
            <label for="loginEmail">Email cím</label>
            <input type="email" class="form-control" id="loginEmail" name="loginEmail" aria-describedby="emailHelp" placeholder="Email cím">
            <small id="emailHelp" class="form-text text-muted">Soha nem vetemednénk arra, hogy mással megosszuk az email címed.</small>
          </div>
          <div class="form-group">
            <label for="loginPassword">Jelszó</label>
            <input type="password" class="form-control" id="loginPassword" name="loginPassword" placeholder="Jelszó">
          </div>
          <div class="form-group">
            <small>
              <a href="/">Folytatás bejelentkezés nélkül</a>
            </small>
          </div>
          <% if (typeof loginError !== 'undefined') { %>
            <div class="alert alert-danger"><%= loginError %></div>
          <% } %>
          <% if (typeof loginInfo !== 'undefined') { %>
            <div class="alert alert-success"><%= loginInfo %></div>
          <% } %>
        </article> <!-- card-group-item.// -->

        <article class="card-group-item">
          <footer class="card-footer d-flex justify-content-center col-12" style="background-color: #68A891;">
            <div class="row col-12">
            <div class="col-6">
              <input class="btn btn-light my-2 my-sm-0 col-10" id="submitLogin" name="submitLogin" type="submit" value="Belépés">
            </div>
            <div class="col-6">
              <input class="btn btn-outline-light my-2 my-sm-0 col-10" id="forgotPW" name="forgotPW" type="submit" value="Elfelejtett jelszó"/>
            </div>
          </div>
        </footer>
      </article> <!-- card-group-item.// -->

    </div>
  </aside>
</form>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="display-5">Vagy... regisztrálj, ha még nem tetted</h2>
</div>

<form class="container" method="POST">
  <div class="row ">
    <aside class="col-8"  style="margin: auto;">
      <div class="card">
        <article class="card-group-item">
          <header class="card-header d-flex justify-content-center" style="background-color: #68A891;">
        </article> <!-- card-group-item.// -->

        <article class="card-group-item col-12">
          <form>
            <input type="hidden" id="loginType" name="loginType" value='reg'>
            <div class="form-group">
              <label for="exampleInputEmail1">Email cím</label>
              <input type="email" class="form-control" id="registerEmail" name="registerEmail" aria-describedby="emailHelp" placeholder="Email cím">
              <small id="emailHelp" class="form-text text-muted">Soha nem vetemednénk arra, hogy mással megosszuk az email címed.</small>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Jelszó</label>
              <input type="password" class="form-control" id="registerPassword" name="registerPassword" placeholder="Jelszó">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Jelszó mégegyszer</label>
              <input type="password" class="form-control" id="registerConfirmPassword" name="registerConfirmPassword" placeholder="Jelszó mégegyszer">
            </div>
          </form>
          <% if (typeof regError !== 'undefined') { %>
            <div class="alert alert-danger"><%= regError %></div>
          <% } %>
          <% if (typeof regInfo !== 'undefined') { %>
            <div class="alert alert-success"><%= regInfo %></div>
          <% } %>
        </article> <!-- card-group-item.// -->

        <article class="card-group-item">
          <footer class="card-footer d-flex justify-content-center col-12" style="background-color: #68A891;">
            <div class="row col-12">
            <div class="col-6">
              <input class="btn btn-light my-2 my-sm-0 col-10" id="submitReg" name="submitReg" type="submit" value="Regisztráció">
            </div>
            <div class="col-6">

            </div>
            </div>
          </footer>
        </article> <!-- card-group-item.// -->

      </div>
    </aside>
  </div>
</form>
<%- include('footer') -%>
